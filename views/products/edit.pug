extends ../layout

block content
    .container
        h1 Edit Product
        form(action="/products/edit/"+product._id,method="post")
            .form-group
                label(for="name") Product Name
                input#name(type="text", class="form-control", name="name", value=product.name style = "border-bottom: 2px solid #343a40")
            .form-group
                label(for="price") Product Price
                input#price(type="text", class="form-control", name="price", value=product.price style = "border-bottom: 2px solid #343a40")
            input(type="submit", class="btn btn-info")
        